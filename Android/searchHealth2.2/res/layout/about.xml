<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/about_title_bar"
        style="@style/actionBar"  >

        <ImageButton
            android:id="@id/actionbar_pre_btn"
            style="@style/actionBarPreButton"   />

        <ImageView style="@style/actionBarSpliter" />

        <TextView
            android:id="@id/actionbar_page_title"
            style="@style/actionBarPageTitle"
            android:layout_marginRight="@dimen/actionbar_imgbtn_width_x1"
            android:text="关于"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="15.0dip"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="95.0dip"
                android:layout_height="95.0dip"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:src="@drawable/about_logo_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5.0dip"
                android:gravity="center"
                android:text="健康100"
                android:textColor="@color/content_title_textcolor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/about_version_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10.0dip"
                android:gravity="center"
                android:text="Android 版本 Beta v1.0.6"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20.0dip"
                android:gravity="center"
                android:text="带在身边的健康管理专家！"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <coolbuy360.control.AutoFitTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="浙江为诚医药股份有限公司 版权所有"
        android:textSize="15dp"
        android:textColor="@color/content_title_textcolor" />

    <coolbuy360.control.AutoFitTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Copyright © 2013 wcyy. All Rights Reserved."
        android:textSize="13dp"
        android:textColor="@color/content_title_textcolor" />

</LinearLayout>