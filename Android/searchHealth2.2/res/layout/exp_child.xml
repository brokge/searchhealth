<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drugtype_group_child_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/drugtype_head_ico" >
        </ImageView>
        
        <TextView
            android:id="@+id/p_expchild_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="left"
            android:padding="12dp"
            android:textColor="@color/drugtype_group_textcolor"
            android:textSize="@dimen/drugtype_group_child_textsize"  />
        
         <ImageView
            android:id="@+id/group_indicator_ico"
            android:layout_width="@dimen/drugtype_group_child_rightarrow_width"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:padding="4dp"
            android:src="@drawable/group_child_right_arrow_ico" >
        </ImageView>
    </LinearLayout>

</LinearLayout>