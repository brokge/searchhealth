<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:paddingBottom="2.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="2.0dip"
            android:paddingTop="5.0dip"
            android:text="图片质量"
            android:textColor="@android:color/white"
            android:textSize="18.0dip" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"         
        >

        <RelativeLayout
            android:id="@+id/setting_imgquality_item_bigimg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/settingitem_body" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:paddingBottom="2.0dip"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="2.0dip"
                        android:paddingTop="5.0dip"
                        android:text="大图（流量消耗较大）"
                        android:textColor="@color/setting_item_textcolor"
                        android:textSize="@dimen/setting_item_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:paddingBottom="5.0dip"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="2.0dip"
                        android:paddingTop="2.0dip"
                        android:text="所有网络加载较高品质大图"
                        android:textColor="@color/setting_item_sub_textcolor"
                        android:textSize="@dimen/setting_item_sub_textsize" />
                </LinearLayout>

                <RadioButton
                    android:id="@+id/setting_autoOptimize_radio_bigimg"
                    android:layout_width="@dimen/setting_item_radiobtn_width"
                    android:layout_height="@dimen/setting_item_radiobtn_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="18.0dip"
                    android:button="@null"
                    android:background="@drawable/setting_radiobtn_bg"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                   />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_imgquality_item_smallimg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/settingitem_body" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:paddingBottom="2.0dip"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="2.0dip"
                        android:paddingTop="5.0dip"
                        android:text="小图（流量消耗较小）"
                        android:textColor="@color/setting_item_textcolor"
                        android:textSize="@dimen/setting_item_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:paddingBottom="5.0dip"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="2.0dip"
                        android:paddingTop="2.0dip"
                        android:text="所有网络加载较低品质小图"
                        android:textColor="@color/setting_item_sub_textcolor"
                        android:textSize="@dimen/setting_item_sub_textsize" />
                </LinearLayout>

                <RadioButton
                    android:id="@+id/setting_autoOptimize_radio_smallimg"
                    android:layout_width="@dimen/setting_item_radiobtn_width"
                    android:layout_height="@dimen/setting_item_radiobtn_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="18.0dip"
                    android:button="@null"
                    android:checked="true"
                    android:background="@drawable/setting_radiobtn_bg"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RadioGroup>

</LinearLayout>