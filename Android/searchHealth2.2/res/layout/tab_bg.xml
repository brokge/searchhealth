<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabsLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tab_bg_selector"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingBottom="2dp" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/tab_main_icon_width"
            android:layout_height="@dimen/tab_main_icon_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dip"
            android:src="@drawable/ic_tab_disease" />
        
        <ImageView
            android:id="@+id/tab_main_ico_newnotice"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="top|right"
            android:scaleType="fitCenter"
            android:src="@drawable/ico_newnotice"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/tab_main_ico_newfunction"
            android:layout_width="34dp"
            android:layout_height="17dp"
            android:layout_gravity="top|right"
            android:scaleType="fitCenter"
            android:src="@drawable/app_new"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tabsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="1dip"
        android:textColor="@drawable/tab_text_selector"
        android:textSize="@dimen/tab_main_name_textsize"
        android:text="疾病" />

</LinearLayout>