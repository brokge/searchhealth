<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/member_scorelog_listitem_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
        	android:textColor="@color/drugstore_list_name_textcolor"
            android:text="签到送健康" />

        <TextView
            android:id="@+id/member_scorelog_listitem_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
        	android:textColor="@color/news_item_content"
            android:text="2014-03-28 20:00" />
    </LinearLayout>

    <TextView
        android:id="@+id/member_scorelog_listitem_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="right|center_vertical"
        android:textSize="20sp"
        android:textStyle="bold" 
        android:textColor="@color/deepgreen"
        android:text="+50"/>

</LinearLayout>
