<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page_bg" 
    android:orientation="vertical" >
    
    <LinearLayout style="@style/actionBar" >
        
        <Button
            android:id="@+id/input_btn_cancel"
            style="@style/actionBarTextButton"
            android:layout_width="@dimen/actionbar_textbtn_width_x4word"
            android:text="取消" />

        <ImageView
            style="@style/actionBarSpliter"
            android:visibility="gone" />

        <View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1" />        

        <ImageView
            style="@style/actionBarSpliter"
            android:visibility="gone" />     
        
        <Button
            android:id="@+id/input_btn_recamera"
            style="@style/actionBarTextButton"
            android:layout_width="@dimen/actionbar_textbtn_width_x4word"
            android:text="条码扫描" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/input_edit_code"
            style="@style/customEditText"
            android:hint="输入药品包装上的条形码"/>

        <Button
            android:id="@+id/input_btn_ok"
            style="@style/customBigButton"
            android:layout_marginTop="20dp" 
            android:text="确定" >
        </Button>
    </LinearLayout>

</LinearLayout>